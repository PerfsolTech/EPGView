<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/epg_grey_dark" />
            <stroke android:width="1dp" android:color="@color/epg_grey_light" />
        </shape>
    </item>
    <item android:state_activated="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <stroke android:width="1dp" android:color="@color/epg_grey_light" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <stroke android:width="1dp" android:color="@color/epg_grey_light" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/epg_grey" />
            <stroke android:width="1dp" android:color="@color/epg_grey_light" />
        </shape>
    </item>
</selector>